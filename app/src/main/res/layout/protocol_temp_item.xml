<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/protocolTempCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/displayPadding"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/cardCorners"
        app:cardElevation="@dimen/cardElevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/displayPadding">

            <TextView
                android:id="@+id/listProtocolName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clear_sans_medium"
                android:text="Protocol Name"
                android:textColor="@color/darkGrayText"
                android:textSize="@dimen/headerFont"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/listProtocolDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clear_sans_medium"
                android:text="Description"
                android:textColor="@color/lowGray"
                android:textSize="@dimen/hintFont"
                app:layout_constraintStart_toStartOf="@+id/listProtocolName"
                app:layout_constraintTop_toBottomOf="@+id/listProtocolName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>