<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.protocol.ProtocolFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="@dimen/displayPadding">

        <TextView
            android:id="@+id/protocolTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/clear_sans_bold"
            android:text="@string/protocol"
            android:textColor="@color/darkGrayText"
            android:textSize="@dimen/titleFont" />

        <View
            android:id="@+id/protocolLineTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lineWidth"
            android:layout_marginTop="@dimen/lineMarginTitle"
            android:background="@color/line" />

        <TextView
            android:id="@+id/backToPatientCard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/minDp"
            android:drawablePadding="-4dp"
            android:fontFamily="@font/clear_sans_medium"
            android:gravity="center|left"
            android:text="@string/backToPatientCard"
            android:textColor="@color/lowGray"
            android:textSize="@dimen/hintFont"
            app:drawableStartCompat="@drawable/back_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkBackground"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/fullnameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clear_sans_bold"
                android:gravity="center_horizontal"
                android:text="LASTNAME FIRSTNAME MIDDLENAME"
                android:textAlignment="center"
                android:textColor="@color/grayText"
                android:textSize="@dimen/mediumFont" />

            <TextView
                android:id="@+id/protocolHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/clear_sans_medium"
                android:text="@string/patientsProtocol"
                android:textAlignment="center"
                android:textColor="@color/lightGrayText"
                android:textSize="@dimen/hintFont" />

            <androidx.cardview.widget.CardView
                android:id="@+id/saveAsPdfCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:clipToPadding="false"
                app:cardCornerRadius="@dimen/cardCorners"
                app:cardElevation="@dimen/cardElevation"
                app:cardUseCompatPadding="true"
                app:contentPadding="6dp"
                android:focusable="true"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/saveAsPdfText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clear_sans_medium"
                    android:text="@string/saveAsPdf"
                    android:textAlignment="textStart"
                    android:textColor="@color/lowGray"
                    android:textSize="@dimen/headerFont"
                    app:drawableStartCompat="@drawable/ic_file" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:scrollbarThumbVertical="@drawable/scroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resultOfInspectionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/clear_sans_medium"
                    android:text="@string/resultOfInspection"
                    android:textColor="@color/darkGrayText"
                    android:textSize="@dimen/mediumFont" />

                <EditText
                    android:id="@+id/resultOfInspectionField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:fontFamily="@font/clear_sans_medium"
                    android:gravity="start|top"
                    android:hint="@string/writeResultOfInspection"
                    android:inputType="textMultiLine"
                    android:minHeight="@dimen/minDp"
                    android:padding="@dimen/editTextPadding"
                    android:textColor="@color/grayText"
                    android:textColorHint="@color/lightGrayText"
                    android:textSize="@dimen/hintFont" />

                <TextView
                    android:id="@+id/conclusionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/clear_sans_medium"
                    android:text="@string/conclusion"
                    android:textColor="@color/darkGrayText"
                    android:textSize="@dimen/mediumFont" />

                <EditText
                    android:id="@+id/conclusionField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text"
                    android:ems="10"
                    android:fontFamily="@font/clear_sans_medium"
                    android:gravity="start|top"
                    android:hint="@string/writeConclusion"
                    android:inputType="textMultiLine"
                    android:minHeight="@dimen/minDp"
                    android:padding="@dimen/editTextPadding"
                    android:textColor="@color/grayText"
                    android:textColorHint="@color/lightGrayText"
                    android:textSize="@dimen/hintFont" />

                <Button
                    android:id="@+id/saveProtocolButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:background="@drawable/button"
                    android:fontFamily="@font/clear_sans_bold"
                    android:text="@string/saveProtocol"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/mediumFont" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</layout>