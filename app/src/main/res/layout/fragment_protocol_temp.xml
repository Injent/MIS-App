<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.protocoltemp.ProtocolTempFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:elevation="@dimen/cardElevation"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backFromProtocolTemps"
                android:layout_width="@dimen/minDp"
                android:layout_height="@dimen/minDp"
                android:padding="8dp"
                android:src="@drawable/ic_back_arrow"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginStart="4dp"
                android:background="?android:attr/actionBarItemBackground"/>

            <TextView
                android:id="@+id/titleProtocolTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/displayPadding"
                android:layout_marginBottom="@dimen/displayPadding"
                android:fontFamily="@font/clear_sans_bold"
                android:maxLines="1"
                android:text="@string/protocolTemps"
                android:textColor="@color/darkGrayText"
                android:textSize="@dimen/titleFont" />
        </LinearLayout>

        <SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/displayPadding"
            android:layout_marginTop="@dimen/displayPadding"
            android:layout_marginEnd="@dimen/displayPadding"
            android:background="@drawable/search"
            android:clickable="true"
            android:focusable="true"
            android:queryBackground="@null"
            android:queryHint="@string/search"
            android:searchHintIcon="@drawable/ic_search_focused"
            android:searchIcon="@drawable/ic_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/protocolRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/displayPadding"
            android:background="@null"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/protocolTextThings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/protocolImage"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:src="@drawable/ic_empty_protocols" />

            <TextView
                android:id="@+id/downloadProtocolsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/clear_sans_medium"
                android:gravity="center"
                android:text="@string/protocolsDownloadDesc"
                android:textColor="@color/lowGray"
                android:textSize="@dimen/headerFont" />

            <TextView
                android:id="@+id/protocolsDownloadHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/clear_sans_medium"
                android:gravity="center"
                android:text="@string/protocolsDownloadHint"
                android:textColor="@color/lightGrayText"
                android:textSize="@dimen/hintFont" />

            <TextView
                android:id="@+id/protocolDownloadAction"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/minDp"
                android:layout_marginStart="@dimen/displayPadding"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="@dimen/displayPadding"
                android:drawablePadding="8dp"
                android:fontFamily="@font/clear_sans_bold"
                android:gravity="center|start"
                android:text="@string/downloadProtocols"
                android:textColor="@color/lightBlue"
                android:textSize="@dimen/mediumFont"
                app:drawableStartCompat="@drawable/ic_download" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/downloadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/clear_sans_bold"
                android:gravity="center"
                android:text="@string/downloading"
                android:textColor="@color/lowGray"
                android:textSize="@dimen/headerFont" />

            <ProgressBar
                android:id="@+id/protocolDownloadProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/errorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/errorTextProtocols"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/clear_sans_bold"
                android:gravity="center"
                android:text="Error"
                android:textColor="@color/error"
                android:textSize="@dimen/mediumFont" />
        </LinearLayout>

    </LinearLayout>

</layout>