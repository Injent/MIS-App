<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/registryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/displayPadding"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/displayPadding"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:longClickable="true"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/cardCorners"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/displayPadding"
            android:paddingTop="@dimen/displayPadding"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/displayPadding">


            <TextView
                android:id="@+id/registryPatient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/clear_sans_medium"
                android:textColor="@color/darkGrayText"
                android:textSize="@dimen/headerFont"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/registryDiagnosis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clear_sans_medium"
                android:textColor="@color/lowGray"
                android:textSize="@dimen/hintFont"
                app:layout_constraintEnd_toEndOf="@+id/registryPatient"
                app:layout_constraintStart_toStartOf="@+id/registryPatient"
                app:layout_constraintTop_toBottomOf="@+id/registryPatient" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>