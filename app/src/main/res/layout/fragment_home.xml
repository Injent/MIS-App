<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlePatients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultDp"
                android:layout_marginTop="@dimen/defaultDp"
                android:fontFamily="@font/clear_sans_bold"
                android:text="@string/patientList"
                android:textColor="@color/white"
                android:textSize="@dimen/titleFont"
                app:layout_constraintBottom_toTopOf="@+id/homeTopLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dbDateUpdateText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/minDp"
                android:layout_marginLeft="@dimen/defaultDp"
                android:fontFamily="@font/clear_sans_medium"
                android:gravity="center|left"
                android:textColor="@color/hintWhite"
                android:textSize="@dimen/hintFont"
                app:drawableStartCompat="@drawable/ic_download" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/displayPadding">

                    <LinearLayout
                        android:id="@+id/updateListSection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/transparent_glass"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/clear_sans_medium"
                            android:padding="10dp"
                            android:text="@string/dbUpdate"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/hintFont" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/transparent_glass"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/patientListSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/clear_sans_medium"
                            android:padding="10dp"
                            android:text="@string/listOfPatients"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/hintFont" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_glass"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/templatesSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/clear_sans_medium"
                            android:padding="10dp"
                            android:text="@string/templates"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/hintFont" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/patientsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/minDp"
            android:layout_height="@dimen/minDp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?actionBarItemBackground"/>

        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:fontFamily="@font/clear_sans_bold"
            android:text="Error"
            android:textAlignment="center"
            android:textColor="@color/error"
            android:textSize="@dimen/headerFont"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/loadingBar"
            app:layout_constraintEnd_toEndOf="@+id/loadingBar"
            app:layout_constraintStart_toStartOf="@+id/loadingBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>