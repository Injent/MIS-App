<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.recommendations.RecommendationTempFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/displayPadding"
            android:background="@drawable/search"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="4dp"
            android:fontFamily="@font/clear_sans_medium"
            android:hint="@string/search"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/darkGrayText"
            android:textColorHint="@color/lowGray"
            android:textSize="@dimen/mediumFont" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendationRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</layout>