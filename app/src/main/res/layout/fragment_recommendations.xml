<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.recommendations.RecommendationTempFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/displayPadding"
            android:background="@drawable/search"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="4dp"
            android:fontFamily="@font/clear_sans_medium"
            android:hint="@string/search"
            android:maxLines="1"
            android:padding="12dp"
            android:textColor="@color/darkGrayText"
            android:textColorHint="@color/lowGray"
            android:textSize="@dimen/mediumFont" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/protocolRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/displayPadding"
            android:background="@null"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/protocolTextThings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/protocolImage"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:src="@drawable/ic_empty_protocols" />

            <TextView
                android:id="@+id/downloadProtocolsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/clear_sans_medium"
                android:gravity="center"
                android:text="@string/recDownloadDesc"
                android:textColor="@color/lowGray"
                android:textSize="@dimen/headerFont" />

            <TextView
                android:id="@+id/protocolsDownloadHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/clear_sans_medium"
                android:gravity="center"
                android:text="@string/recDownloadHint"
                android:textColor="@color/lightGrayText"
                android:textSize="@dimen/hintFont" />

            <TextView
                android:id="@+id/protocolDownloadAction"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/minDp"
                android:layout_marginStart="@dimen/displayPadding"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="@dimen/displayPadding"
                android:drawablePadding="8dp"
                android:fontFamily="@font/clear_sans_bold"
                android:gravity="center|start"
                android:text="@string/downloadRecommendations"
                android:textColor="@color/lightBlue"
                android:textSize="@dimen/mediumFont"
                app:drawableStartCompat="@drawable/ic_download" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/downloadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/clear_sans_bold"
                android:gravity="center"
                android:text="@string/downloading"
                android:textColor="@color/lowGray"
                android:textSize="@dimen/headerFont" />

            <ProgressBar
                android:id="@+id/protocolDownloadProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/errorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/errorTextProtocols"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/clear_sans_bold"
                android:gravity="center"
                android:text="Error"
                android:textColor="@color/error"
                android:textSize="@dimen/mediumFont" />
        </LinearLayout>

    </LinearLayout>

</layout>